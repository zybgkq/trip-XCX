/* pages/mySettings/mySettings.wxss */
.page__hd{
  z-index: 1;
  height: 400rpx;
   /* background: linear-gradient(120deg,#4395ff, blue); */
   background: linear-gradient(to bottom, rgba(67,149,255,1),rgba(109,171,252,0.99), rgba(153,190,237,0.5));
   display: flex;
   align-items: center;
   flex-direction: column;
   text-align: center;
}
.page_bd{
  width: 100%;
  text-align: center;
}
.page__desc{
  color: white;
  font-size: 14px;
}
.reg-In{
  margin-top: 20rpx;
  z-index: 99;
  width: 40%;
  color: white;
  border-radius: 100rpx;
 background-color: #eb6f06;
 height: 30px;
 line-height: 30px;
 font-size: 14px;
}
.page_bd{
  margin-top: -30px;
  z-index: 99;
}

.section{
  background-color: white;
  opacity: 1;
  display: flex;
  flex-direction: roe;
  width: 95%;
  margin: 20rpx auto;
  box-shadow: 1rpx 0rpx 20rpx #b7b1b1;
  justify-content: space-around;
}
.section-item{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.section-item text{
  font-size: 24rpx;
  font-weight: 300;
  color: black;
}
.section-item .iconfont{
  font-size: 58rpx;
}
.section-item:nth-of-type(1) .iconfont{
  color: #1296db;
}
.section-item:nth-of-type(2) .iconfont{
  color: #c568ec;
}
.section-item:nth-of-type(3) .iconfont{
  color: #cc0d1f;
}
.section-item:nth-of-type(4) .iconfont{
  color: #23b33b;
}
.section-item:nth-of-type(5) .iconfont{
  color: #27d444;
}
.weui-cells{
  width: 95%;
  margin: 0 auto;
  text-align: left;
  box-shadow: 1rpx 0rpx 20rpx #b7b1b1;
}
.weui-cell__bd{
  font-size: 14px;
}
.weui-cell__ft{
  font-size: 12px;
}
.weui-msg__desc{
  text-align: center;
  margin-top: 10px;
  color: #4395ff;
}