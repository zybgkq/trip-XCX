/* pages/destination/destination.wxss */
.page__hd{
  position: relative;
}
.header{
  width: 100%;
  height: 400rpx;
  z-index: 99;
}
.header-ms{
  z-index: 100;
  position: absolute;
  color: white;
  left: 48%;
  top: 10%;
}
.header-ms-y{
  position: absolute;
  color: white;
  left: 40%;
  top: 30%;
}
.section{
  display: flex;
  flex-direction: roe;
  width: 95%;
  margin: 20rpx auto;
  box-shadow: 1rpx -5rpx 20rpx #b7b1b1;
  justify-content: space-around;
}
.section-item{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.section-item text{
  font-size: 24rpx;
  font-weight: 300;
  color: black;
}
.section-item .iconfont{
  font-size: 58rpx;
}
.section-item:nth-of-type(1) .iconfont{
  color: #1296db;
}
.section-item:nth-of-type(2) .iconfont{
  color: #c568ec;
}
.section-item:nth-of-type(3) .iconfont{
  color: #cc0d1f;
}
.section-item:nth-of-type(4) .iconfont{
  color: #23b33b;
}
.section-item:nth-of-type(5) .iconfont{
  color: #27d444;
}